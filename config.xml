<?xml version='1.0' encoding='utf-8'?>
<widget id="net.buzzn.buzzn" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BUZZN</name>
    <description>
        Gemeinschaftlich, dezentral und fair produzierter Strom aus Deutschland.
    </description>
    <author email="hi@steylish.de" href="https://www.buzzn.net/">
        BUZZN
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-customurlscheme" spec="4" />
    <plugin name="cordova-plugin-statusbar" spec="2" />
    <plugin name="cordova-plugin-camera" spec="4" />

    <preference name="DisallowOverscroll" value="true"/>
    <preference name="BackgroundColor" value="0xfffbc020"/>
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ffffff" />
    <preference name="StatusBarStyle" value="default" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="buzzn:*" />
    <feature name="Custom URL scheme">
        <param name="id" value="cordova-plugin-customurlscheme" />
        <param name="url" value="https://github.com/EddyVerbruggen/Custom-URL-scheme.git" />
        <variable name="URL_SCHEME" value="buzzn" />
    </feature>
    <platform name="android">
        <feature name="Camera">
            <param name="android-package" value="org.apache.cordova.CameraLauncher" />
        </feature>
        <allow-intent href="market:*" />
        <icon src="resources/android/drawable-ldpi/icon.png" density="ldpi" />
        <icon src="resources/android/drawable-mdpi/icon.png" density="mdpi" />
        <icon src="resources/android/drawable-hdpi/icon.png" density="hdpi" />
        <icon src="resources/android/drawable-xhdpi/icon.png" density="xhdpi" />
        <icon src="resources/android/drawable-xxhdpi/icon.png" density="xxhdpi" />
        <icon src="resources/android/drawable-xxxhdpi/icon.png" density="xxxhdpi" />
        <!-- Splash Screens -->
        <splash src="resources/android/drawable-ldpi/screen.png" density="port-ldpi"/>
        <splash src="resources/android/drawable-hdpi/screen.png" density="port-hdpi"/>
        <splash src="resources/android/drawable-mdpi/screen.png" density="port-mdpi"/>
        <splash src="resources/android/drawable-xhdpi/screen.png" density="port-xhdpi"/>
        <splash src="resources/android/drawable-xxhdpi/screen.png" density="port-xxhdpi"/>
        <splash src="resources/android/drawable-xxxhdpi/screen.png" density="port-xxxhdpi"/>
    </platform>
    <platform name="ios">
        <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
            <string>need camera access to take a picture for an avatar</string>
        </edit-config>
        <edit-config target="NSPhotoLibraryUsageDescription" file="*-Info.plist" mode="merge">
            <string>need photo library access to allow setting a new avatar from there</string>
        </edit-config>
        <edit-config target="NSPhotoLibraryAddUsageDescription" file="*-Info.plist" mode="merge">
            <string>need photo library access to save the taken avatar picture there</string>
        </edit-config>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="resources/ios/AppIcon.appiconset/icon-60x60@3x.png" width="180" height="180" />
        <icon src="resources/ios/AppIcon.appiconset/icon-60x60@2x.png" width="120" height="120" />
        <icon src="resources/ios/AppIcon.appiconset/icon-76x76@1x.png" width="76" height="76" />
        <icon src="resources/ios/AppIcon.appiconset/icon-76x76@2x.png" width="152" height="152" />
        <icon src="resources/ios/AppIcon.appiconset/icon-40x40@2x.png" width="80" height="80" />
        <icon src="resources/ios/AppIcon.appiconset/icon-40x40@3x.png" width="120" height="120" />
        <icon src="resources/ios/AppIcon.appiconset/icon-29x29@1x.png" width="29" height="29" />
        <icon src="resources/ios/AppIcon.appiconset/icon-29x29@2x.png" width="58" height="58" />
        <icon src="resources/ios/AppIcon.appiconset/icon-29x29@3x.png" width="87" height="87" />
        <icon src="resources/ios/AppIcon.appiconset/icon-20x20@1x.png" width="20" height="20" />
        <icon src="resources/ios/AppIcon.appiconset/icon-20x20@2x.png" width="40" height="40" />
        <icon src="resources/ios/AppIcon.appiconset/icon-20x20@3x.png" width="60" height="60" />
        <icon src="resources/ios/AppIcon.appiconset/icon-83.5@2x.png" width="167" height="167" />
        <icon src="resources/ios/AppIcon.appiconset/icon-marketing-1024x1024.png" width="1024" height="1024" />
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage~iphone-320x480.png" width="320" height="480"/>
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage~iphone_640x960.png" width="640" height="960"/>
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage-Portrait~ipad_768x1024.png" width="768" height="1024"/>
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage-Portrait@2x~ipad_2048x2732.png" width="1536" height="2048"/>
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage-Landscape~ipad_1024x768.png" width="1024" height="768"/>
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage-Landscape@2x~ipad_2048x1536.png" width="2048" height="1536"/>
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage-568h@2x~iphone_640x1136.png" width="640" height="1136"/>
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage-750@2x~iphone6-portrait_750x1334.png" width="750" height="1334"/>
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage-1242@3x~iphone6s-portrait_1242x2208.png" width="1242" height="2208"/>
        <splash src="resources/ios/LaunchImage.launchimage/LaunchImage-1242@3x~iphone6s-landscape_2208x1242.png" width="2208" height="1242"/>
    </platform>
</widget>
